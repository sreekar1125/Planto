<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".help.HelpInfo1">
    <include
        layout="@layout/tool_bar"
        android:id="@+id/tool_bar"/>
    <TextView
        android:id="@+id/help_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I have an issue with a Plant"
        android:layout_below="@id/tool_bar"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        android:fontFamily="@font/raleway_bold"
        android:textSize="16sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:id="@+id/linlay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_txt1"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"


        >
        <TextView
            android:id="@+id/hitxt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I didnt receive  amount in my wallet "
            android:fontFamily="@font/raleway_medium"
            android:textSize="14sp"
            android:textColor="#000000"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linlay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linlay1"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:paddingTop="20dp"
        android:focusable="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/hitxt_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="i want to understand the amount process in the invoice"
            android:fontFamily="@font/raleway_medium"
            android:textSize="14sp"

            android:textColor="#000000"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linlay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linlay2"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:focusable="true"
        android:paddingLeft="20dp">
        <TextView
            android:id="@+id/hitxt_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="i have an issue with the given plant/fertizers"
            android:fontFamily="@font/raleway_medium"
            android:textSize="14sp"
            android:textColor="#000000"
            />
    </LinearLayout>


</RelativeLayout>